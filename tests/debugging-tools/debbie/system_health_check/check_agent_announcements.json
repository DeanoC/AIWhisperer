      "command": "message",
      "content": "Patricia announcement test complete"
    },
    {
      "command": "switch_agent",
      "agent": "t",
      "expect_response": ["Tessa", "Tester", "test"],
      "timeout": 10
    },
    {
      "command": "message",
      "content": "Tessa announcement test complete"
    },
    {
      "command": "switch_agent",
      "agent": "d",
