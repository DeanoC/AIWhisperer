      "content": "Starting agent announcement tests..."
    },
    {
      "command": "switch_agent", 
      "agent": "a",
      "expect_response": ["Alice", "assistant", "coding"],
      "timeout": 10
    },
    {
      "command": "message",
      "content": "Alice announcement test complete"
    },
    {
      "command": "switch_agent",
      "agent": "p", 
      "expect_response": ["Patricia", "RFC", "Producer"],
